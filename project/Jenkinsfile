#!/usr/bin/env groovy

pipeline {
    agent any
    
    stages{
        stage('Checking cft Installation') {
            steps {
                echo 'Checking CFT Version'
                sh 'cft -v'
                echo 'Checking CFT Help'
                sh 'cft -h'
            }
        }
        stage('Create Project') {
            steps {
                echo '------------------'
                sh '. ~/cft-env-vars && cft project.yaml'
            }
        }
    }
}